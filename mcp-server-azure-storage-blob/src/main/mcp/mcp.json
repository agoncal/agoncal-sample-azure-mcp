// This is the configuration file for VS Code.
// It should be located under ./vscode/mcp.json  (on Mac)
// Without these comments of course

{
  "inputs": [
    {
      "type": "promptString",
      "id": "github-pat",
      "description": "GitHub API Key",
      "password": true
    }
  ],
  "servers": {
    "imas": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/imas"
      ]
    }
  }
}



